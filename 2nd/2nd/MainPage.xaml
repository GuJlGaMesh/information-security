		<TextBox x:Name="key" HorizontalAlignment="Center" Margin="0,183,0,0" Text="БАЙКЕР" TextWrapping="Wrap" VerticalAlignment="Top" Width="610" Height="51"/>
		<Button x:Name="button" Content="Результат" Margin="0,575,0,0" CornerRadius="7" Click="Button_OnClick" VerticalAlignment="Top" Width="610" HorizontalAlignment="Center" Height="66"/>

	</Grid>
</Page>
